<UserControl x:Class="DenseLight.Views.HikCamera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:liftui="https://github.com/pchuan98/Lift.UI"
             xmlns:viewModel="clr-namespace:DenseLight.ViewModels"
             xmlns:local="clr-namespace:DenseLight.Views"
             d:DataContext="{d:DesignInstance Type=viewModel:CameraViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <liftui:ImageViewer BorderThickness="1" />
        </Grid>

        <Grid Grid.Column="1">
            <GroupBox 
                BorderBrush="MediumPurple" 
                Header="海康相机" 
                Style="{DynamicResource ResourceKey=GroupBoxTab}">

                <StackPanel>
                    <UniformGrid Columns="5" Margin="1">
                        <Button Content="打开相机" 
                                Command="{Binding OpenCameraCommand}"                                 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="抓取单张" 
                                Command="{Binding CaptureCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="开始采集" 
                                Command="{Binding StartCaptureCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="停止采集" 
                                Command="{Binding StopCaptureCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="关闭相机" 
                                Command="{Binding CloseCameraCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                    </UniformGrid>

                    <UniformGrid Columns="4" Margin="1">
                        <StackPanel>
                            <TextBlock 
                                Text="当前曝光(ms)"                                 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Left"/>
                            <liftui:NumericUpDown 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Value="{Binding ExposureTime, StringFormat={}{0:F2}, Delay=200}"
                                IsEnabled="{Binding IsStartCapture}"
                                VerticalAlignment="Center" 
                                ValueFormat="N2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="1">
                            <TextBlock 
                                Text="当前帧率(fps)" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Left"/>
                            <liftui:NumericUpDown 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Value="{Binding FrameRate}"
                                VerticalAlignment="Center" 
                                ValueFormat="N2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="1">
                            <TextBlock 
                                Text="当前增益(dB)" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Left"/>
                            <liftui:NumericUpDown 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Value="{Binding Gain}"
                                VerticalAlignment="Center" 
                                ValueFormat="N2"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="1">
                            <TextBlock 
                                Text="像素格式" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Left"/>
                            <TextBox 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Text="{Binding PixelFormat}"
                                VerticalAlignment="Center" 
                                IsReadOnly="True"/>
                        </StackPanel>
                    </UniformGrid>

                    <UniformGrid Columns="4" Margin="1">
                        <Button Content="设置曝光" 
                                Command="{Binding SetExposureCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="设置帧率" 
                                Command="{Binding SetFrameRateCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="设置增益" 
                                Command="{Binding SetGainCommand}"
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                        <Button Content="设置格式" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Stretch"/>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="1">
                        <DockPanel>
                            <TextBox FontSize="12" 
                                     Text="{Binding Root}"
                                     VerticalAlignment="Center" 
                                     DockPanel.Dock="Right" Width="300"/>
                            <TextBlock Text="存储路径"   
                                       FontSize="12"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center" 
                                       Margin="1" />
                        </DockPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <Button Content="选择路径" 
                                    Command="{Binding SelectRootCommand}"
                                    Margin="1" 
                                    VerticalAlignment="Center"/>
                            <Button Content="保存图片" 
                                    Command="{Binding SaveCaptureCommand}"
                                    Margin="1" 
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                    </UniformGrid>

                </StackPanel>

            </GroupBox>

        </Grid>



    </Grid>
</UserControl>
