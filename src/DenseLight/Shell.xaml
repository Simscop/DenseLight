<Window x:Class="DenseLight.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:liftui="https://github.com/pchuan98/Lift.UI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DenseLight"
        xmlns:viewModel="clr-namespace:DenseLight.ViewModels"
        mc:Ignorable="d"       
        d:DataContext="{d:DesignInstance Type=viewModel:ShellViewModel}"
        Title="Shell" Height="600" Width="800">

    <Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid >

                <liftui:ImageViewer BorderThickness="1" />

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid >
                    <StackPanel Orientation="Vertical">
                        <TextBlock 
                            Text="AutoFocus Measurement Demo" 
                            FontSize="12" 
                            FontWeight="Bold"
                            Margin="5" 
                            HorizontalAlignment="Center"/>


                        <GroupBox 
                            Margin="1" 
                            BorderBrush="Red" 
                            Header="Zaber Controller" 
                            Style="{DynamicResource GroupBoxTab}" >

                            <StackPanel Orientation="Vertical">
                                <DockPanel>
                                    <!--DockPanel.Dock="Right"要先放-->
                                    <Button Margin="1,0" Content="Connect" DockPanel.Dock="Right"/>
                                    <ComboBox FontWeight="Bold"  SelectedItem="{}"/>
                                </DockPanel>

                                <UniformGrid Columns="2" Margin="0,1">
                                    <TextBlock Text="Connection Status: " VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ConnectionStatus}" />
                                </UniformGrid>

                                <UniformGrid Columns="2" Margin="0,1">
                                    <TextBlock Text="Z(nm)" VerticalAlignment="Center"/>
                                    <liftui:NumericUpDown 
                                        Grid.Column="1" 
                                        VerticalAlignment="Stretch" 
                                        VerticalContentAlignment="Center" 
                                        IsReadOnly="True" 
                                        Value="{Binding CurrentZ}" 
                                        ValueFormat="F3"/>
                                </UniformGrid>

                                <UniformGrid Columns="2" Margin="0,1">
                                    <TextBlock Text="Z-OFFSET(nm)" VerticalAlignment="Center"/>
                                    <liftui:NumericUpDown
                                        Grid.Column="1"                                       
                                        Increment="1"
                                        Minimum="1"
                                        ValueFormat="F3"
                                        Value="{Binding ZInterval}" />
                                </UniformGrid>

                                <UniformGrid Columns="2" Margin="0,1">
                                    <Button
                                        Height="30"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Command="{Binding MoveZCommand}"
                                        CommandParameter="-1"
                                        Content="-"
                                        FontSize="18"
                                        FontWeight="Bold" />
                                    <Button
                                        Height="30"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Command="{Binding MoveZCommand}"
                                        CommandParameter="1"
                                        Content="+"
                                        FontSize="18"
                                        FontWeight="Bold" />
                                </UniformGrid>


                            </StackPanel>

                        </GroupBox>

                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <GroupBox 
                        BorderBrush="Red" 
                        Header="Camera" 
                        Style="{DynamicResource GroupBoxTab}">

                        <UniformGrid Columns="2">
                            <Button Content="打开相机"/>
                            <Button Grid.Column="1" Content="关闭相机"/>
                        </UniformGrid>
                    </GroupBox>

                </Grid>

            </Grid>



        </Grid>



    </Border>

</Window>
